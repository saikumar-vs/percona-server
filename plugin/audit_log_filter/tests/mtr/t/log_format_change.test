
--let $audit_filter_log_path = `SELECT @@global.datadir`
--let $audit_filter_log_name = `SELECT @@global.audit_log_filter_file`

--disable_query_log
call mtr.add_suppression("Failed to shutdown components infrastructure.");
--enable_query_log

SELECT audit_log_filter_set_filter('log_all', '{"filter": {"log": true}}');
SELECT audit_log_filter_set_user('%', 'log_all');

--source generate_audit_events.inc

--let $restart_parameters="restart: --audit_log_filter_format=OLD"
--source include/restart_mysqld.inc

--let $new_name_suffix = xml.NEW
--source rename_rotated_log.inc

--source generate_audit_events.inc

--let $restart_parameters="restart: --audit_log_filter_format=JSON"
--source include/restart_mysqld.inc

--let $new_name_suffix = xml.OLD
--source rename_rotated_log.inc

--source generate_audit_events.inc

--let $restart_parameters="restart: --audit_log_filter_format=NEW"
--source include/restart_mysqld.inc

--let $new_name_suffix = json.JSON
--source rename_rotated_log.inc

# Make sure all rotated logs have valid format
--let $audit_filter_log_name = audit_filter.xml.NEW
--source validate_logs_format.inc

--let $audit_filter_log_name = audit_filter.xml.OLD
--source validate_logs_format.inc

--let $audit_filter_log_name = audit_filter.json.JSON
--source validate_logs_format.inc

--echo #
--echo # Cleanup
DELETE FROM mysql.audit_log_user;
DELETE FROM mysql.audit_log_filter;
SELECT audit_log_filter_flush();

--let $log_base_name = audit_filter
--remove_file $audit_filter_log_path$log_base_name.xml.NEW
--remove_file $audit_filter_log_path$log_base_name.xml.OLD
--remove_file $audit_filter_log_path$log_base_name.json.JSON
